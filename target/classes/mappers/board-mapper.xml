<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="BoardMapper">

	<resultMap type="BoardVO" id="BoardMap">
		<id property="reviewnum" column="review_num" />
		<result property="id" column="id" />
		<result property="title" column="title" />
		<result property="content" column="content" />
		<result property="ordernum" column="order_num" />
		<result property="writedate" column="write_date" />
		<result property="starpoint" column="star_point" />		
	</resultMap>

	<!-- 모든 게시글 조회 -->
	<select id="getAllBoard" resultType="com.semi.model.vo.BoardVO">
		SELECT review_num, title,
		content, write_date
		FROM review
	</select>

	<!-- 게시글 작성 -->
	<insert id="writeBoard"
		parameterType="com.semi.model.vo.BoardVO">
		INSERT INTO review (title, content) VALUES (#{title},
		#{content})
	</insert>

</mapper>